@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Share/_Layout.cshtml";
}

@section contenheader {
    <li class="nav-item">
        <a class="nav-link" href="/home/index">Sản Phẩm</a>
    </li>
    <li>
        <a class="nav-link" href="/home/borrowing">Sách Đã Mượn</a>
    </li>
}

    
<div class="container mt-5">
    <form action="/account/login" method="post" class="w-50 mx-auto">
        <h2>Login</h2>
        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" id="username" name="userName" class="form-control" style="max-width: 300px;" required />
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control" style="max-width: 300px;" required />
        </div>
        <p class="text-danger">@ViewBag.message</p>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>
</div>