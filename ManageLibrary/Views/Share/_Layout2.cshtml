<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-success navbar-dark">
        <a class="navbar-brand" href="#"></a>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/admin/dashboard">bảng thống kê</a>
            </li>
        </ul>
        <ul class="navbar-nav ml-auto">
            <li>
                @if (Context.Session.GetInt32("UserId") != null || Context.Session.GetInt32("AdminId") != null)
                {
                    <a class="nav-link" href="/account/logout">LogOut</a>
                }
                else
                {
                    <a class="nav-link" href="/account/login">Login</a>
                }
            </li>
        </ul>
    </nav>

    <div class="container-fluid">
        
        <div class="row">
            <div class="col-2 text-white" style="background-color:burlywood; min-height:650px; padding:0">
                <a href="/admin/Dashboard" class="text-white list-group-item" style="background-color:transparent">home</a>
                <a href="/admin/Product" class="text-white list-group-item" style="background-color:transparent">product</a>
                <a href="/admin/Author" class="text-white list-group-item" style="background-color:transparent">author</a>
                <a href="/admin/Genre" class="text-white list-group-item" style="background-color:transparent">genre</a>
                <a href="#" class="text-white list-group-item" style="background-color:transparent">borrow</a>
            </div>
            <div class="col-10">
                @RenderBody()
            </div>
        </div>

        
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
